{
  "name": "@illinois-toolkit/ilw-hero",
  "description": "Illinois Toolkit:  The Hero Image component adds a large picture at the top of the page.",
  "private": false,
  "license": "MIT",
  "version": "1.2.0",
  "type": "module",
  "files": [
    "src/**",
    "dist/**",
    "builder/**"
  ],
  "exports": {
    ".": {
      "import": "./dist/ilw-hero.js",
      "require": "./dist/ilw-hero.cjs",
      "default": "./dist/ilw-hero.js"
    },
    "./ilw-hero.css": {
      "import": "./dist/ilw-hero.css"
    }
  },
  "main": "./dist/ilw-hero.js",
  "module": "./dist/ilw-hero.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build --config vite.transpile.config.ts --emptyOutDir && vite build --config vite.build.config.ts --emptyOutDir",
    "preview": "vite preview",
    "prepack": "npm run build",
    "test:axe": "playwright test",
    "test:axe:github": "playwright test --config=playwright.ci.config.ts",
    "test": "vitest run --browser.headless",
    "test:browser": "vitest watch --browser chromium"
  },
  "dependencies": {
    "lit": "3.1.3"
  },
  "devDependencies": {
    "@illinois-toolkit/ilw-core": "^1.0.5",
    "@playwright/test": "^1.56.1",
    "@vitest/browser": "^3.2.4",
    "playwright": "^1.56.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vite-plugin-dts": "^4.5.4",
    "vitest-browser-lit": "^0.1.0"
  }
}
